<% if @movie.errors.any? %>
  <h2>There were errors saving your movie</h2>
  <ul>
    <% @movie.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @movie do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :year_released %>
    <%= f.text_field :year_released %>
  </div>
   <div>
    <%= f.label :Rating %>
    <%= f.text_field :Rating %>
  </div>
  <%= f.submit %>
<% end %>